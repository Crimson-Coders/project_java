
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="400px"
            android:layout_height="300px"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Click a Button" />

        <Button
            android:id="@+id/callHelp"
            android:layout_width="150px"
            android:layout_height="150px"
            android:layout_alignLeft="@+id/textView1"
            android:layout_below="@+id/textView1"
            android:layout_marginTop="46dp"
            android:text="Call Help" />

        <Button
            android:id="@+id/login"
            android:layout_width="150px"
            android:layout_height="150px"
            android:layout_alignBaseline="@+id/callHelp"
            android:layout_alignBottom="@+id/callHelp"
            android:layout_alignRight="@+id/textView1"
            android:layout_marginRight="19dp"
            android:text="Login" />

        <Button
            android:id="@+id/taskHelp"
            android:layout_width="150px"
            android:layout_height="150px"
            android:layout_alignLeft="@+id/callHelp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:text="Task Help" />

        <Button
            android:id="@+id/breakButton"
            android:layout_width="150px"
            android:layout_height="150px"
            android:layout_alignBaseline="@+id/taskHelp"
            android:layout_alignBottom="@+id/taskHelp"
            android:layout_alignLeft="@+id/login"
            android:text="Break" />

    </RelativeLayout>
